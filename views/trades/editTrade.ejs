<%- include('../partials/header.ejs')%>

        <section id="createTrade">
            <div class="newTradeForm">
                <h1>Edit your Trade!</h1>
                    <form action="/trades/<%= item.id%>?_method=PUT" method="POST">
                        <label for="category">Category</label>
                        <input type="text" id="category" name="category" value="<%=item.category%>" required>

                        <label for="title">Title</label>
                        <input type="text" id="title" name="title" value="<%=item.title%>" required>

                        <label for="details">Details</label>
                        <textarea id="details" name="details" required><%=item.details%></textarea>

                        <label for="weight">Weight</label>
                        <input type="text" id="weight" name="weight" value="<%=item.weight%>" required>

                        <label for="color">Color</label>
                        <input type="text" id="color" name="color" value="<%=item.color%>" required>

                        <label for="img">Image Path</label>
                        <input type="text" id="img" name="img" value="<%=item.img%>" placeholder="Enter Image Path" required>

                        <input type="submit" value="Update Trade">
                    </form>
            </div>
        </section>

<%- include('../partials/footer.ejs')%>
